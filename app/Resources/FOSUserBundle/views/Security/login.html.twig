{% extends '@FOSUser/layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="ui middle aligned center aligned grid">
        <div class="column">
            <h2 class="ui teal image header">
                <span class="content">
                    Log-in to your account
                </span>
            </h2>
            <form class="ui {% if error %}error{% endif %} form"
                  action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                {% endif %}
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="email" name="_username" placeholder="{{ 'security.login.username'|trans }}"
                                   value="{{ last_username }}" required="required"/>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" placeholder="{{ 'security.login.password'|trans }}" id="password"
                                   name="_password" required="required"/>
                        </div>
                    </div>
                    <button id="_submit" name="_submit" class="ui fluid large teal submit button"
                            type="submit">{{ 'security.login.submit'|trans }}</button>
                </div>
                <div class="ui error message">
                    {% if error %}
                        <i class="icon warning sign"></i> {{ error.messageKey|trans(error.messageData, 'security') }}
                    {% endif %}
                </div>
            </form>
        </div>
    </div>
{% endblock %}