{% extends '@Themes/jinya-default-theme/base.html.twig' %}
{% block head_title %}
    &mdash; {{ formEntity.title }}
{% endblock %}

{% block maincontent %}
    {% form_theme form '@Themes/jinya-default-theme/Form/themes/jinya-cms.html.twig' %}
    <div class="jinya-form">
        <h1>{{ formEntity.title }}</h1>
        {% if mail_sent is defined and mail_sent == true %}
            <div class="jinya-message jinya-message--success">
                {{ themeConfig.form.messages.mail_sent_message }}
            </div>
        {% endif %}
        {{ form_start(form) }}
        {{ form_row(form) }}
        <input type="text" tabindex="-1" style="display: none" name="contact_via_fax">
        <button class="jinya-button" type="submit">{{ themeConfig.form.buttons.submit }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}