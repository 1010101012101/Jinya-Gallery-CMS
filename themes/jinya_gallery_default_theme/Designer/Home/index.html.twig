<html>
<head>
    <title>{{ themeConfig.page.title }}</title>
    {% block styles %}
        {% block styles_theme %}
            <link rel="stylesheet" href="{{ asset('public/jinya_gallery_default_theme/styles/designer.css') }}">
        {% endblock %}
        {% block styles_additional_fonts %}
            <link rel="stylesheet" href="//cdn.materialdesignicons.com/2.1.99/css/materialdesignicons.min.css">
            {% if themeConfig.page.fontlink is defined and themeConfig.page.fontlink is not empty %}
                <link rel="stylesheet" href="{{ themeConfig.page.fontlink }}">
            {% endif %}
        {% endblock %}
        {% block styles_custom %}
        {% endblock %}
    {% endblock %}
    {% block favicon %}
        <link href="{{ themeConfig.page.favicon }}" rel="shortcut icon">
    {% endblock %}
    {% block meta %}
        <meta charset="utf-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=Edge"/>
        <meta name="viewport" content="width=device-width"/>
        {% block custom_meta %}
        {% endblock %}
    {% endblock %}
</head>
<body>
{% block licenses %}
    <!-- Many thanks to the team from Codrops (https://tympanus.net/codrops/), I used many inspirations from you and they all work great. -->
    <!--
    Like most sites Jinya Gallery CMS uses open source libraries, here are the licenses
    Codrops: https://tympanus.net/codrops/licensing/
    FontAwesome: http://fontawesome.io/license/
    Perfect Scrollbar: https://github.com/utatti/perfect-scrollbar/blob/master/LICENSE
    classie: https://desandro.mit-license.org/
    -->
{% endblock %}
{% block body %}
    <div id="app"></div>
{% endblock %}
{% block scripts %}
    <script>
      window.options = {
        startBackground: '{{ asset(themeConfig.startpage.background.image) }}',
        genericBackground: '{{ asset(themeConfig.default_background.image) }}',
        pageTitle: '{{ themeConfig.page.title }}'
      };
      window.messages = {{ get_translation_catalogue()|json_encode|raw }};
      window.validators = {{ get_translation_catalogue('validators')|json_encode|raw }};
    </script>
{% block scripts_polyfills %}
    <script src="https://cdn.polyfill.io/v2/polyfill.min.js"></script>
{% endblock %}
{% block scripts_theme %}
    <script src="{{ asset('public/jinya_gallery_default_theme/scripts/designer.manifest.js') }}"></script>
    <script src="{{ asset('public/jinya_gallery_default_theme/scripts/designer.vendor.js') }}"></script>
    <script src="{{ asset('public/jinya_gallery_default_theme/scripts/designer.app.js') }}"></script>
{% endblock %}
{% endblock %}
</body>
</html>
