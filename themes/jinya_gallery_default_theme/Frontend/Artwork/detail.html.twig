{% extends '@Theme/jinya_gallery_default_theme/Frontend/base.html.twig' %}
{% block head_title %}
    &mdash; {{ artwork.name }}
{% endblock %}

{% block custom_meta %}
    {% if artwork.description is not empty %}
        <meta name="Description" content="{{ artwork.description }}">
    {% endif %}
{% endblock %}

{% block maincontent %}
    <figure class="artwork">
        <img src="{{ artwork.picture }}" alt="{{ artwork.name }}"/>
        <figcaption>
            <strong>{{ artwork.name }}</strong>
            <p>{{ artwork.description }}</p>
        </figcaption>
    </figure>
{% endblock %}