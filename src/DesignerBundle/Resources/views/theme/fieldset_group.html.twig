<fieldset>
    <legend>{{ group.title }}</legend>
    {% if group.fields is defined %}
        {% for field in group.fields %}
            {% set f_fullname = "#{fullname}[#{field.name}]" %}
            {% include '@Designer/theme/field.html.twig' with { 'field': field, 'fullname': f_fullname, 'configuration': attribute(configuration, field.name) } %}
        {% endfor %}
    {% endif %}
    {% if group.groups is defined %}
        {% for group in group.groups %}
            {% set g_fullname = "#{fullname}[#{group.name}]" %}
            {% include '@Designer/theme/fieldset_group.html.twig' with { 'field': field, 'fullname': g_fullname, 'configuration': attribute(configuration, group.name) } %}
        {% endfor %}
    {% endif %}
</fieldset>