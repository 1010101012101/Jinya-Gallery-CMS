                <option value="{{ menu.id }}"
                        {% if theme.footerMenu is not null and theme.footerMenu.id == menu.id %}
                            selected
                        {% endif %}
                >{{ menu.name }}</option>
            {% endfor %}
        </select>
    </div>
</div>