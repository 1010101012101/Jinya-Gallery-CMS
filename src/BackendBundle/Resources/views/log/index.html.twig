{% extends '@Backend/base.html.twig' %}

{% set menu_log_active = true %}
{% block content %}
    <table class="table table-hover table-striped" data-tables="true">
        <thead>
        <tr>
            <th>{{ 'backend.log.message'|trans }}</th>
            <th>{{ 'backend.log.level'|trans }}</th>
            <th>{{ 'backend.log.created_at'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entry in logs %}
            <tr>
                <td>{{ entry.message }}</td>
                <td>{{ entry.levelName }}</td>
                <td>{{ entry.createdAt|localizeddate('long') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block sidebar_items %}
    {% include 'BackendBundle:sidebar:log.html.twig' %}
{% endblock %}