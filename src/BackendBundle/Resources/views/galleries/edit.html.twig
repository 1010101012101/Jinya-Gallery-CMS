{% extends '@Backend/galleries/galleries_base.html.twig' %}

{% block content %}
    {{ form_errors(form) }}
    {{ form_start(form) }}
    {% if gallery.background %}
        <div class="form-group row">
            <div class="col-sm-2 offset-sm-2 gallery-thumbnail-container"
                 data-delete-url="{{ url('backend_galleries_background_delete', {'id': gallery.id}) }}">
                <img src="{{ gallery.background }}" style="height: 150px;" alt="{{ gallery.name }}"
                     class="img-thumbnail">
                <span class="fa fa-lg fa-trash"></span>
            </div>
        </div>
    {% endif %}
    {{ form_widget(form) }}
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">{{ 'generic.save'|trans }}</button>
            <a class="btn btn-secondary" href="{{ url('backend_galleries_overview') }}" data-target="#content"
               data-action="nav">{{ 'generic.cancel'|trans }}</a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}